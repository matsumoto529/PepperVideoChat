<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffdd"
    tools:ignore="RtlHardcoded"
    tools:context=".ChatActivity">


    <TextView
        android:layout_height="100dp"
        android:layout_width="240dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="148dp"
        android:text="「CALL」ボタンを押して呼び出してください！"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_height="110dp"
        android:layout_width="240dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="252dp"
        android:text="終わるときは「END」ボタンを押してください！"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btCallAction"
        android:text="CALL"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@drawable/button_call_blue"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487"/>

    <view
        android:id="@+id/vRemoteView"
        class="io.skyway.Peer.Browser.Canvas"
        android:background="@drawable/view_chat_color"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCallAction" />

    <view
        android:id="@+id/vLocalView"
        class="io.skyway.Peer.Browser.Canvas"
        android:background="@drawable/view_chat_color"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vRemoteView"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btBackAction"
        android:text="BACK"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/button_back_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/vLocalView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vRemoteView"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
