<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffdd"
    tools:context=".ChatActivity">

    <TextView
        android:layout_width="237dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="148dp"
        android:text="「CALL」ボタンを押して呼び出してください！"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="233dp"
        android:layout_height="110dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="250dp"
        android:text="終わるときは「END」ボタンを押してください！"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vRemoteView"
        class="io.skyway.Peer.Browser.Canvas"
        android:background="@drawable/view_chat_color"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btBackAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btCallAction"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="68dp"
        android:text="CALL"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@drawable/button_call_blue"
        app:layout_constraintBottom_toTopOf="@+id/vLocalView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />

    <Button
        android:id="@+id/btBackAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="BACK"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/button_back_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vLocalView"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/vLocalView"
        class="io.skyway.Peer.Browser.Canvas"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/view_chat_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>