<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    tools:ignore="RtlHardcoded">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <view
            android:id="@+id/vRemoteView"
            class="io.skyway.Peer.Browser.Canvas"
            android:layout_width="782dp"
            android:layout_height="531dp"
            android:background="@drawable/view_chat_color" />
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="531dp"
            android:orientation="vertical">
            <view
                android:id="@+id/vLocalView"
                class="io.skyway.Peer.Browser.Canvas"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/view_chat_color"/>
            <Button
                android:id="@+id/btHomeAction"
                android:layout_width="180dp"
                android:layout_height="351dp"
                android:layout_gravity="center"
                android:background="@null"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/gifView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginLeft="191dp"
            android:layout_marginTop="40dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
