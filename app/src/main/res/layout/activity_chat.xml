<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    tools:ignore="RtlHardcoded">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="782dp"
            android:layout_height="531dp"
            android:orientation="vertical">
            <view
                android:id="@+id/vRemoteView"
                class="io.skyway.Peer.Browser.Canvas"
                android:layout_width="782dp"
                android:layout_height="480dp"
                android:layout_gravity="center"
                android:background="@drawable/view_chat_color" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="782dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="通話が終わったら「HOME」ボタンを押してください。"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="540dp"
            android:orientation="vertical">
            <view
                android:id="@+id/vLocalView"
                class="io.skyway.Peer.Browser.Canvas"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/view_chat_color"/>
            <ImageButton
                android:id="@+id/btCallAction"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@null"
                style="?android:attr/borderlessButtonStyle" />
            <Button
                android:id="@+id/btHomeAction"
                android:layout_width="181dp"
                android:layout_height="181dp"
                android:background="@null"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/gifView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginLeft="191dp"
            android:layout_marginTop="40dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
